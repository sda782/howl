@page
@model Howl.Pages.LoginModel
@{
}
<h2>Login</h2>
<form method="post">
    <label for="username">Username</label>
    <input type="text" class="form-control" asp-for="@Model.LoginUser.Username" id="username">
    <label for="password">Password</label>
    <input type="password" asp-for="@Model.LoginUser.Password" class="form-control" id="password">
    <button type="submit" class="btn btn-primary">Login</button>
</form>