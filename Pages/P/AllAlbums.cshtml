@page
@model Howl.Pages.P.AllAlbumsModel
@using Howl.Models;
@{
}
<h1>All Albums</h1>
<button class="btn btn-secondary" onclick="$('#filterform').toggle()">Show filter</button>
<form id="filterform" style="display:none;">
    <h5>Select Genre</h5>
    @foreach (var item in Enum.GetValues(typeof(Album.Genre)))
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="@Model.Genre" id="@item" value="@item" />
            <label class="form-check-label" for="@item">@item.ToString().ToLower()</label><br />
        </div>
    }
    <input class="btn btn-primary" type="submit" value="Filter" />
</form>

<div class="d-flex">
    @if (Model.Albums.Count() != 0)
    {
        @foreach (var a in Model.Albums)
        {
            <div  class="card m-4" style="min-width:200px; max-width:200px;">
                <a asp-page="Album" asp-route-id="@a.AlbumID">
                    <img class="card-img-top" src="@a.CoverUrl" width="200" height="200" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@a.AlbumTitle</h5>
                        <p class="card-text">By @a.Artist</p>
                        
                    </div>
                </a>
            </div>
        }
    }
</div>