                    <input asp-for="@Model.StarRating" value="4" class="star star-4" id="star-4" type="radio" />
                    <label class="star star-4" for="star-4"></label>
                    <input asp-for="@Model.StarRating" value="3" class="star star-3" id="star-3" type="radio" checked="checked"/>
                    <label class="star star-3" for="star-3"></label>
                    <input asp-for="@Model.StarRating" value="2" class="star star-2" id="star-2" type="radio" />
                    <label class="star star-2" for="star-2"></label>
