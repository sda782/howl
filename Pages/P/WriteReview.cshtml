    <label asp-for="@Model.Review.ReviewTitle" class="form-label" for="ReviewTitle">Review title</label>
    <input asp-for="@Model.Review.ReviewTitle" type="text" class="form-control" id="ReviewTitle" placeholder="Title of your review." name="ReviewTitle" minlength="1" maxlength="20" size="10"><br><br>
    <label asp-for="@Model.Review.ReviewText" class="form-label" for="ReviewText">Description</label>
    <textarea asp-for="@Model.Review.ReviewText" type="text" class="form-control" rows="5" id="ReviewText" placeholder="Describe your experience." name="ReviewText" minlength="1" maxlength="1000" size="50"></textarea>
    <input type="hidden" asp-for="@Model.albumid" value="@Model.albumid" />
    <button type="submit" class="btn btn-primary btn-lg mt-5">Submit Review</button>
</form>

<style>
    div.stars {
        width: 270px;
        display: inline-block
    }

    input.star {
        display: none
    }

    label.star {
        float: right;
        padding: 10px;
        font-size: 36px;
        color: #ffffff;
        transition: all .2s
    }

    input.star:checked ~ label.star:before {
        content: '\f005';
        color: #ffffff;
        transition: all .25s
    }

    input.star-5:checked ~ label.star:before {
        color: #ffffff;
        text-shadow: 0 0 20px #952
    }

    input.star-1:checked ~ label.star:before {
        color: #ffffff
    }

    label.star:hover {
        transform: scale(1.2)
    }

    label.star:before {
        content: '\f006';
        font-family: FontAwesome
    }
</style>